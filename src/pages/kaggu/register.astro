---
// Component Imports
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Card from '../../components/Card.astro'; 
import Breadcrumb from '../../components/Breadcrumb.astro'; 
// You can import components from any supported Framework here!


// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'My Astro Site';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<link lang="scss" rel="stylesheet" href={Astro.resolve('../../styles/styles.scss')}>
	<!-- <link rel="stylesheet" href={Astro.resolve('../../styles/global.css')}>
	<link rel="stylesheet" href={Astro.resolve('../../styles/home.css')}> -->
	<link rel="stylesheet" href="../assets/fonts/fonts.css">

	
</head>
<body class="main-bg">

	<div class="app">
		<Header />
	
		<main>

           <Breadcrumb />

			<div class="container">
                <section class="mt-50 mb-50">
                    <div class="ds-card-form-ct container_630 mb-50">
                        <div class="ds-card-form__header">
                            <h3 class="ds-card-form__title">Créer un compte</h3>
                        </div>
                        <div class="ds-card-form__body">
                
                            <form action="">
                                <div class="ds-form">
                                    <div class="input_gpr">
                                        <label for="user_name">Nom </label>
                                        <input id="user_name" type="text" placeholder="Votre adresse email">
                                    </div>

                                    <div class="input_gpr">
                                        <label for="user_last_name">Prénom</label>
                                        <input id="user_last_name" type="text" placeholder="Votre prénom">
                                    </div>

                                    <div class="input_gpr">
                                        <label for="user_name">Adresse email</label>
                                        <input id="user_name" type="text" placeholder="Votre adresse email">
                                    </div>

                                    <div class="input_gpr">
                                        <label for="num_tel">Numéro de Téléphone</label>
                                        <input id="num_tel" type="text" placeholder="Votre numéro de Téléphone">
                                    </div>
                        
                                    <div class="input_gpr">
                                        <label for="passord">Mot de passe</label>
                                        <input id="passord" type="password" placeholder="Votre mon de passe">
                                    </div>

                                    <div class="input_gpr">
                                        <label for="passord_confirmation">Confirmation de mot de passe</label>
                                        <input id="passord_confirmation" type="password" placeholder="Veuillez confirmer votre mot de passe">
                                    </div>

                                   

                
                                    <div class="display-flex flex-wrap justify-space-between">
                
                                        <div class=" form-type-checkbox input_gpr_radio">
                                            <div class="input_check_radio">
                                                <input id="madame" type="checkbox" name="civilite" value="Votre nom d'utilisateur">
                                            </div>
                                            <label for="madame">Acceptez les conditions légales</label>
                                            
                                        </div>
                                      
                
                                    </div>
                
                                    <div class="input_gpr">
                                        <button type="submit" class="btn btn-green-solid  btn-medium">S'inscrire</button>
                                    </div>
                        
                                </div>
                            </form>
                
                        </div>
                        <!-- <div class="ds-card-form__footer">
                
                        </div> -->
                    </div>
                </section>

		    </div>

		</main>

	    <Footer />

    </div>

	<script src="../js/prism.min.js"></script>  
	<script src="../js/script.js"></script>  
	<!-- <script src="../assets/js/prism/min.js"></script>  -->
</body>
</html>
